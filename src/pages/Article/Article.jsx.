import React from 'react';
import { useParams, Link } from 'react-router-dom';
import Button from '../../components/ui/Button.jsx';
import { allArticles } from '../../data/articles.js';

export default function Article() {
  const { slug } = useParams();
  const article = allArticles.find(a => a.slug === slug);

  if (!article) return <div className="p-8 text-center">Article not found.</div>;

  return (
    <div className="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 pt-24 pb-12">
      <h1 className="text-3xl font-bold mb-4">{article.title}</h1>
      <p className="text-sm text-gray-500 mb-6">Category: {article.category}</p>
      <div className="prose dark:prose-invert">
        <p>{article.content}</p>
      </div>

      <div className="mt-8">
        <Link to={`/${article.category.toLowerCase()}`}>
          <Button>Back to {article.category} Category</Button>
        </Link>
      </div>
    </div>
  );
}
